<h1>New Application</h1>
<%= form_with url: "/applications", method: :post, local: true, id: "new_application" do |form|%>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :address %>
  <%= form.text_field :address %>
  <%= form.label :city %>
  <%= form.text_field :city %>
  <%= form.label :state %>
  <%= form.text_field :state %>
  <%= form.label :zip_code %>
  <%= form.text_field :zip_code %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= hidden_field_tag :application_status, "In Progress" %>
  <%= form.submit "Submit" %>
<% end %>
