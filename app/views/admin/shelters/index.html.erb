<h1>All Shelters</h1>

<% @shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= shelter.name %></h3>
  </div>
<% end %>
<section id= "pending_applications"> 
  <h2>Shelters with Pending Applications</h2>
  <% @shelters_with_pending_applications.each do |shelter| %>
    <div id="shelter-<%= shelter.id %>">
      <h3><%= shelter.name %></h3>
    </div>
  <% end %>
</section>